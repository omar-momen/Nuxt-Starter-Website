@layer base {
  html {
    @apply overflow-x-hidden;
  }
  body {
    @apply bg-bodyBg-light dark:bg-bodyBg-dark  text-darkColor dark:text-whiteColor  font-Inter overflow-x-hidden;

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      @apply font-Inter;
      font-size: revert;
      font-weight: revert;
    }

    * img {
      @apply h-[revert-layer] max-w-[unset] max-h-[unset];
    }
  }
}
